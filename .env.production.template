# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

LOCAL_DEV=false
MIN_CLIENTS=2

# Production API URLs
CENTRAL_HUB_API_URL=https://your-central-hub-api.example.com
DATA_ACCESS_API_URL=https://your-data-access-api.example.com
IMAGING_API_URL=https://your-imaging-api.example.com

# File system paths
IMAGES_DIR=/path/to/images

# API Authentication
PRIVATE_API_KEY_HEADER=x-api-key
PRIVATE_API_KEY=your-secret-api-key-here

# Network and Storage Configuration
NET_ID=your-network-id
UPLOADED_FEDERATED_DATA_BUCKET=s3://your-bucket-name

# FL Configuration
JOB_TYPE=standard
FL_API_PORT=8000

FLIP_BUCKET_NAME=your-flip-bucket
